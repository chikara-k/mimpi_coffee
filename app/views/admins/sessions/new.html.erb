<div class="container">
  <div class="row">
    <div class="col-lg-4 mt-3">
      <%= link_to "お客様ログインページはこちら", new_customer_session_path %>
      <h2 class="mt-3">管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path, id: 'new_admin', class: 'new_admin', local: true do |f| %>
        <div class="row mb-3">
          <div class="col-lg-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "登録メールアドレス（半角英数字）" %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "パスワード（半角英数字）" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="row mt-2 mb-2">
          <div class="col-lg-12">
            <%= f.submit "ログイン", class: "btn btn-outline-success" %>
          </div>
        </div>
      <% end %>

      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
