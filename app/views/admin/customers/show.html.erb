<div class="container">
<h2 style="padding: 20px 0;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
 <div class="row">
  <div>
    <table class="table table-borderless">
      <tr class="d-flex">
        <th class="col-lg-6">顧客ID</th>
        <td class="col-lg-6"><%= @customer.id %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">氏名</th>
        <td class="col-lg-6"><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">フリガナ</th>
        <td class="col-lg-6"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">郵便番号</th>
        <td class="col-lg-6"><%= @customer.postal_code %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">住所</th>
        <td class="col-lg-12"><%= @customer.address %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">電話番号</th>
        <td class="col-lg-6"><%= @customer.telephone_number %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">メールアドレス</th>
        <td class="col-lg-6"><%= @customer.email %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-lg-6">会員ステータス</th>
        <td class="col-lg-6">
          <% if @customer.is_active == true %>
            <p class = "text-success">有効</p>
          <% elsif @customer.is_active == false %>
            <p class = "text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
    </table>
     <%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-outline-success mr-2" %>  <%= link_to " 注文履歴一覧を見る", admin_orders_path, class: "btn btn btn-outline-info ml-2" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6" >

  </div>
</div>
