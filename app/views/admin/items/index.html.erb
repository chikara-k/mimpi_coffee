
<div class="container">
<h2>商品一覧</h2>
 <div class="row">
  <div class="col-12">
      <%= link_to new_admin_item_path, class: "btn btn-outline-success float-right" do %>
        <i class="fas fa-plus"></i>
        新規登録
      <% end %>
  </div>
  <div class="col-12">
    <table class="table">
      <thead class="table-active">
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item), :style=>"color:black;" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              ¥<%= item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_active == true %>
                <p class = "text-success">販売中</p>
              <% elsif item.is_active == false %>
                <p class = "text-secondary">販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>