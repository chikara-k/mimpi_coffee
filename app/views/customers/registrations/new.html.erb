<div class="container font-mincho">
  <div class="row">
    <div class="col-lg-8">
      <h3 style="padding: 20px 0;">新規会員登録</h3>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <label for="name">お名前(必須)</label>
        <div class="form-row">
          <div class="form-group col-lg-6">
            <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: "姓 (例：山田)" %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "名 (例：太郎)" %>
          </div>
        </div>

        <label for="name-kana">ふりがな(必須)</label>
        <div class="form-row">
          <div class="form-group col-lg-6">
            <%= f.text_field :last_name_kana, autofocus: true, class: 'form-control', placeholder: "せい (例：やまだ)" %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.text_field :first_name_kana, autofocus: true, class: 'form-control', placeholder: "めい (例：たろう)" %>
          </div>
        </div>

        <label for="mail">メールアドレス</label>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "例：sample@mimpicoffee.com" %>
        </div>

        <label for="postal_code">郵便番号(ハイフンなし)</label>
        <div class="form-group">
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: 'form-control', placeholder: "例：1234567" %>
        </div>

        <label for="address">住所</label>
        <div class="form-group">
          <%= f.text_field :address, autocomplete: "address", class: 'form-control', placeholder: "例：宮崎県宮崎市大坪東〇〇ー〇〇ー〇〇　ビル名　部屋番号" %>
        </div>

        <label for="telephone_number">電話番号(ハイフンなし)</label>
        <div class="form-group">
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: 'form-control', placeholder: "例：09012345678" %>
        </div>

        <label for="password">パスワード</label>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "6文字以上（半角英数字）" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "確認のため再度ご入力ください。" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-outline-light mb-5", style: "background-color: #daa965;" %>
        </div>
        <% end %>
        <h4>既に登録済みの方</h4>
        <p><%= link_to "こちら",  new_customer_session_path %><span>からログインしてください。</span></p>
    </div>
  </div>
</div>