<div class="container">
  <div class="row">
    <div class="col-lg-5 offset-md-3">
      <h3 style="padding-top: 20px;">お問い合わせ</h3>
      <%= render 'layouts/error', model: @contact %>
      <%= form_with model:@contact, url: confirm_path(@contact), local:true do |f| %>
        <p style="padding-top: 10px;"></p>
        <lavel>お名前</lavel>
        <div class="form-row">
          <div class="form-group col-lg-12">
            <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "必須" %>
          </div>
        </div>
        <p style="padding-top: 10px;"></p>
        <lavel>メールアドレス</lavel>
        <div class="form-row">
          <div class="col-lg-12">
            <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "必須" %>
          </div>
        </div>
        <p style="padding-top: 20px;"></p>
        <lavel>お問い合わせ内容</lavel>
        <div class="form-row">
          <div class="form-group col-lg-12">
            <%= f.text_area :message, size: '8x5', class: 'form-control', placeholder: "必須" %>
            <p style="padding-top: 20px;"></p>
            <%= f.submit '入力内容確認', class: "btn btn-outline-secondary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
