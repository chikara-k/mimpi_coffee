<div class="container">
  <p style="padding-bottom: 120px;"></p>
  <div class="row">
    <div class="col-lg-4" style="margin: 0 60px;">
      <%= attachment_image_tag @item, :image, :size => '400x400' %>
    </div>
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="font-weight-bold"><%= @item.name %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 mt-2">
          <% if @item.roasting_level == 1 %>
          <h4>中煎り</h4>
          <% elsif @item.roasting_level == 2 %>
          <h4>浅煎り</h4>
          <% else %>
          <h4>深煎り</h4>
          <% end %>
          <p style="padding-bottom: 20px;"></p>
          <ul style="list-style: none; padding-left: 5px;">
            <% if @item.taste_bitter == 1 %>
            <li>苦味：●</li>
            <% elsif @item.taste_bitter == 2 %>
            <li>苦味：● ●</li>
            <% elsif @item.taste_bitter == 3 %>
            <li>苦味：● ● ●</li>
            <% elsif @item.taste_bitter == 4 %>
            <li>苦味：● ● ● ● </li>
            <% elsif @item.taste_bitter == 5 %>
            <li>苦味：● ● ● ● ●</li>
            <% else %>
            <li>苦味：ー</li>
            <% end %>

            <% if @item.taste_sour == 1 %>
            <li>酸味：●</li>
            <% elsif @item.taste_sour == 2 %>
            <li>酸味：● ●</li>
            <% elsif @item.taste_sour == 3 %>
            <li>酸味：● ● ●</li>
            <% elsif @item.taste_sour == 4 %>
            <li>酸味：● ● ● ● </li>
            <% elsif @item.taste_sour == 5 %>
            <li>酸味：● ● ● ● ●</li>
            <% else %>
            <li>酸味：ー</li>
            <% end %>

            <% if @item.taste_aroma == 1 %>
            <li>香り：●</li>
            <% elsif @item.taste_aroma == 2 %>
            <li>香り：● ●</li>
            <% elsif @item.taste_aroma == 3 %>
            <li>香り：● ● ●</li>
            <% elsif @item.taste_aroma == 4 %>
            <li>香り：● ● ● ● </li>
            <% elsif @item.taste_aroma == 5 %>
            <li>香り：● ● ● ● ●</li>
            <% else %>
            <li>香り：ー</li>
            <% end %>

            <% if @item.taste_body == 1 %>
            <li>コク：●</li>
            <% elsif @item.taste_body == 2 %>
            <li>コク：● ●</li>
            <% elsif @item.taste_body == 3 %>
            <li>コク：● ● ●</li>
            <% elsif @item.taste_body == 4 %>
            <li>コク：● ● ● ● </li>
            <% elsif @item.taste_body == 5 %>
            <li>コク：● ● ● ● ●</li>
            <% else %>
            <li>コク：ー</li>
            <% end %>
          </ul>

          <p><%= @item.introduction %></p>
        </div>

      </div>
      <div class="row border-top">
        <div class="col-lg-12">
          <h7 class="ml-3"><span style="font-size: 1.5em;">¥<%= @item.price.to_s(:delimited) %></span> /100g</h7>
        </div>
      </div>

      <%= form_with model: @cart_item, url: ec_cart_items_path do |f| %>
      <div class="row ml-1" style="margin-top: 20px;">
        <div class="col-lg-2">
          <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
          <%= f.hidden_field :item_id, :value => @item.id %>
        </div>
        <div class="col-lg-4 ml-3">
          <%= f.submit "カートに入れる", class: "btn btn-outline-success btn-block" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<p style="padding-bottom: 150px;"></p>