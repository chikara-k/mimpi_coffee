<div class="container">
  <h3 style="padding: 20px 0;">ご注文履歴詳細</h3>
  <div class="row">
    <div class="col-lg-7">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><b>注文日</b></td>
            <td>
              <%= @order.created_at.strftime("%Y/%m/%d") %>
            </td>
          </tr>
          <tr>
            <td><b>お届け先</b></td>
            <td>
              <%= @order.name %><br>
              〒<%= @order.postal_code %>
              <%= @order.address%>
            </td>
          </tr>
          <tr>
            <td><b>お支払い方法</b></td>
            <td>
              <%= @order.payment_method %>
            </td>
          </tr>
          <tr>
            <td><b>ステータス</b></td>
            <td>
              <%= @order.order_status %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-5 mt-5">
      <h5><b>請求情報</b></h5>
      <table class="table">
        <tbody>
          <tr>
            <td><b>商品合計</b></td>
            <td>
              <%= @item_total %>円
            </td>
          </tr>
          <tr>
            <td><b>送料</b></td>
            <td>
              <%= @order.shipping_cost %>円
            </td>
          </tr>
          <tr>
            <td><b>ご請求額</b></td>
            <td><%= @order.total_payment %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
          <% subtotal = (order_detail.item.price_tax_included * order_detail.amount).to_i.to_s(:delimited, delimiter: ',') %>
        <tbody>
          <td><%= order_detail.item.name%></td>
          <td><%= (order_detail.item.price_tax_included).to_i.to_s(:delimited, delimiter: ',') %></td>
          <td><%= order_detail.amount%></td>
          <td><%= subtotal %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>










