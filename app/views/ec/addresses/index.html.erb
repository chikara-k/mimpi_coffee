<div class="container">
  <h3 style="padding: 20px 0;">配送先登録/一覧</h3>
  <div id="error_explanation">
    <%= render 'layouts/error', model: @address %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_with model:@address, url: ec_addresses_path, local:true do |f| %>
        <div class="form-group col-lg-5">
          <label for="address">宛名</label>
          <%= f.text_field :name, autocomplete: "name", class: 'form-control', placeholder: "例：山田太郎" %>
        </div>
        <div class="form-group col-lg-5">
           <label for="address">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: 'form-control', placeholder: "例：1234567" %>
        </div>
        <div class="form-group col-lg-10">
          <label for="address">住所</label>
          <%= f.text_field :address, autocomplete: "address", class: 'form-control', placeholder: "例：宮崎県宮崎市大坪東〇〇ー〇〇ー〇〇　ビル名　部屋番号" %>
        </div>
        <div class="col-lg-2">
          <%= f.submit "新規登録", class: "btn btn-outline-light btn-block", style: "background-color: #daa965;" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-11 m-3">
      <table class="table table-bordered">
        <thead class="table-active text-center">
          <tr>
            <th>削除</th>
            <th>名前</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>編集</th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td class="text-center">
              <%= link_to "✖", ec_address_path(address), method: :delete %>
            </td>
            <td class="text-center">
              <%= address.name %>
            </td>
            <td class="text-center">
              〒<%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td class="text-center">
              <%= link_to "編集", edit_ec_address_path(address), class: "btn btn-outline-secondary" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>