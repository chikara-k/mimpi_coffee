<div class="container">
  <h3 style="padding: 20px 0;">配送先編集</h3>
  <div class="row">
    <div class="col-lg-12">
      <%= form_with model:@address, url: ec_addresses_path(@address), method: :patch, local:true do |f| %>
        <div class="form-group col-lg-5">
          <label for="address">宛名</label>
          <%= f.text_field :name, autocomplete: "name", class: 'form-control', placeholder: "例：山田太郎" %>
        </div>
        <div class="form-group col-lg-5">
           <label for="address">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: 'form-control', placeholder: "例：1234567" %>
        </div>
        <div class="form-group col-lg-10">
          <label for="address">住所</label>
          <%= f.text_field :address, autocomplete: "address", class: 'form-control', placeholder: "例：宮崎県宮崎市大坪東〇〇ー〇〇ー〇〇　ビル名　部屋番号" %>
        </div>
        <div class="col-lg-2 mb-5">
          <%= f.submit "変更内容を保存", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>